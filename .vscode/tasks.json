{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start VitePress",
      "type": "shell",
      "command": "npm install; npm run docs:dev",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "options": {
        "shell": {
          "executable": "powershell.exe",
          "args": ["-NoProfile", "-ExecutionPolicy", "Bypass", "-Command"]
        }
      },
      "dependsOn": ["Open Browser"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "label": "Open Browser",
      "type": "shell",
      "command": "npx wait-on http://localhost:5173; Start-Process http://localhost:5173",
      "problemMatcher": [],
      "group": {
        "kind": "none"
      }
    }
  ]
}
